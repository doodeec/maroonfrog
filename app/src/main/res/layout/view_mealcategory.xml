<?xml version="1.0" encoding="utf-8"?>
<com.doodeec.maroonfrog.ui.meal.list.MealCategoryView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/meal_category"
    android:padding="@dimen/padding"
    tools:ignore="RtlHardcoded">

    <ImageView
        android:id="@+id/category_chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:rotation="90"
        android:src="@drawable/ic_chevron_right_black_36dp"
        android:tint="@android:color/white" />

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/category_chevron"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@android:color/white"
        tools:text="Category with a very long name" />

</com.doodeec.maroonfrog.ui.meal.list.MealCategoryView>