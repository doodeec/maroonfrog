<?xml version="1.0" encoding="utf-8"?>
<com.doodeec.maroonfrog.ui.meal.detail.AddonView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="@dimen/touch_size"
    android:padding="@dimen/padding"
    tools:background="#eee"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/addon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:text="Priloha" />

    <TextView
        android:id="@+id/addon_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/addon_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="0.4 â‚¬" />

    <TextView
        android:id="@+id/addon_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/addon_name"
        android:layout_toLeftOf="@id/addon_price"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="20g" />

</com.doodeec.maroonfrog.ui.meal.detail.AddonView>